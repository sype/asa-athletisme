	<params> 
		<param name="field_birthdate" type="text" 
			label="field birthday" default="cb_geburtstag" 
			description="Type here the name of the field, where the birthdate is stored."/> 
		<param name="count" type="text" 
			label="count" default="5" 
			description="Defines the count of the upcoming birthdays will be show by the module."/> 
     	<param name="display_name" type="radio"
            label="display name" default="1"
            description="Defines which name will be shown by the module. Username or real name (firstname lastname)">
        	<option value="1">real name</option>
        	<option value="0">user name</option>
    	</param>
     	<param name="show_cblink" type="radio"
            label="show CB Link" default="1"
            description="Shows a link to the Community Builder Profile of the user.">
        	<option value="1">Yes</option>
        	<option value="0">No</option>
    	</param>
     	<param name="show_cal" type="radio" 
            label="show calendar" default="1" 
            description="Shows the calendar icon."> 
        	<option value="1">Yes</option> 
        	<option value="0">No</option> 
    	</param> 
     	<param name="show_age" type="radio" 
            label="show age" default="1" 
            description="Shows the age of the user."> 
        	<option value="1">Yes</option> 
        	<option value="0">No</option> 
    	</param> 
     	<param name="show_days" type="radio" 
            label="show remaining days" default="1" 
            description="Shows the remaining days until the birthday."> 
        	<option value="1">Yes</option> 
        	<option value="0">No</option> 
    	</param> 
		<param name="singular_day" type="text" 
			label="singular day" default="day" 
			description="Defines the singular string for DAY after the remaining days until birthday."/> 
		<param name="plural_day" type="text" 
			label="plural day" default="days" 
			description="Defines the plural string for DAY, which will be shown after the remaining days until birthday."/> 
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
			
    </params> 
</install>


