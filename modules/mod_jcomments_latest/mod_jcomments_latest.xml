	<version>3.0</version>
	<description>MOD_JCOMMENTS_LATEST_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_jcomments_latest">mod_jcomments_latest.php</filename> 
		<folder>elements</folder> 
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_jcomments_latest.xml</filename> 
	</files>
	<media destination="mod_jcomments_latest" folder="media">
		<filename>index.html</filename>
		<folder>css</folder>
	</media>
	<languages folder="language">
		<language tag="ar-AA">ar-AA/ar-AA.mod_jcomments_latest.ini</language>
		<language tag="be-BY">be-BY/be-BY.mod_jcomments_latest.ini</language>
		<language tag="bg-BG">bg-BG/bg-BG.mod_jcomments_latest.ini</language>
		<language tag="cs-CZ">cs-CZ/cs-CZ.mod_jcomments_latest.ini</language>
		<language tag="da-DK">da-DK/da-DK.mod_jcomments_latest.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_jcomments_latest.ini</language>
		<language tag="el-GR">el-GR/el-GR.mod_jcomments_latest.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_jcomments_latest.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_jcomments_latest.ini</language>
		<language tag="fa-IR">fa-IR/fa-IR.mod_jcomments_latest.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_jcomments_latest.ini</language>
		<language tag="it-IT">it-IT/it-IT.mod_jcomments_latest.ini</language>
		<language tag="km-KH">km-KH/km-KH.mod_jcomments_latest.ini</language>
		<language tag="lt-LT">lt-LT/lt-LT.mod_jcomments_latest.ini</language>
		<language tag="lv-LV">lv-LV/lv-LV.mod_jcomments_latest.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.mod_jcomments_latest.ini</language>
		<language tag="pl-PL">pl-PL/pl-PL.mod_jcomments_latest.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_jcomments_latest.ini</language>
		<language tag="ro-RO">ro-RO/ro-RO.mod_jcomments_latest.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_jcomments_latest.ini</language>
		<language tag="sk-SK">sk-SK/sk-SK.mod_jcomments_latest.ini</language>
		<language tag="sl-SI">sl-SI/sl-SI.mod_jcomments_latest.ini</language>
		<language tag="th-TH">th-TH/th-TH.mod_jcomments_latest.ini</language>
		<language tag="tr-TR">tr-TR/tr-TR.mod_jcomments_latest.ini</language>
		<language tag="uk-UA">uk-UA/uk-UA.mod_jcomments_latest.ini</language>
		<language tag="zh-CN">zh-CN/zh-CN.mod_jcomments_latest.ini</language>
	</languages>
	<params addpath="/modules/mod_jcomments_latest/elements">
		<param
			name="source"
			type="jcommentsobjectgroup"
			default="com_content"
			multiple="true"
			size="10"
			label="MOD_JCOMMENTS_LATEST_FIELD_SOURCE_LABEL"
			description="" />

		<param
			name="count"
			type="text"
			default="5"
			label="MOD_JCOMMENTS_LATEST_FIELD_ITEMS_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_ITEMS_DESC" />

		<param
			name="ordering"
			type="list"
			default="date"
			label="MOD_JCOMMENTS_LATEST_FIELD_ORDERING_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_ORDERING_DESC">
			<option value="date">MOD_JCOMMENTS_LATEST_OPTION_ORDER_BY_DATE</option>
			<option value="vote">MOD_JCOMMENTS_LATEST_OPTION_ORDER_BY_VOTES</option>
		</param>

		<param name="comments_grouping" type="list"
			default="none"
			label="MOD_JCOMMENTS_LATEST_FIELD_COMMENTS_GROUPING_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_COMMENTS_GROUPING_DESC">
			<option value="none">None</option>
			<option value="object_title">MOD_JCOMMENTS_LATEST_OPTION_OBJECT_TITLE</option>
		</param>

		<param
			name="show_comment_title"
			type="radio"
			default="1"
			label="MOD_JCOMMENTS_LATEST_FIELD_COMMENT_TITLE_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_COMMENT_TITLE_DESC">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>

		<param
			name="show_comment_author"
			type="radio"
			default="1"
			label="MOD_JCOMMENTS_LATEST_FIELD_COMMENT_AUTHOR_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_COMMENT_AUTHOR_DESC">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>

		<param
			name="limit_comment_text"
			type="text"
			size="5"
			default="100"
			label="MOD_JCOMMENTS_LATEST_FIELD_LIMIT_COMMENT_TEXT_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_LIMIT_COMMENT_TEXT_DESC" />

		<param
			name="readmore"
			type="radio"
			default="0"
			label="MOD_JCOMMENTS_LATEST_FIELD_READMORE_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_READMORE_DESC">
			<option	value="1">Show</option>
			<option	value="0">Hide</option>
		</param>

		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param
			name="show_comment_date"
			type="radio"
			default="1"
			label="MOD_JCOMMENTS_LATEST_FIELD_COMMENT_DATE_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_COMMENT_DATE_DESC">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>

		<param
			name="date_type"
			type="list"
			default="absolute"
			label="MOD_JCOMMENTS_LATEST_FIELD_DATE_TYPE_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_DATE_TYPE_DESC">
			<option value="absolute">MOD_JCOMMENTS_LATEST_OPTION_DATE_TYPE_ABSOLUTE</option>
			<option value="relative">MOD_JCOMMENTS_LATEST_OPTION_DATE_TYPE_RELATIVE</option>
		</param>

		<param
			name="date_format"
			type="text"
			default="%d.%m.%Y %H:%M"
			label="MOD_JCOMMENTS_LATEST_FIELD_DATE_FORMAT_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_DATE_FORMAT_DESC" />

		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param
			name="show_object_title"
			type="radio"
			default="1"
			label="MOD_JCOMMENTS_LATEST_FIELD_OBJECT_TITLE_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_OBJECT_TITLE_DESC">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>

		<param
			name="link_object_title"
			type="radio"
			default="0"
			label="MOD_JCOMMENTS_LATEST_FIELD_LINK_OBJECT_TITLE_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_LINK_OBJECT_TITLE_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

		<param
			name="item_heading"
			type="list"
			default="4"
			label="MOD_JCOMMENTS_LATEST_OBJECT_TITLE_HEADING_LABEL"
			description="MOD_JCOMMENTS_LATEST_OBJECT_TITLE_HEADING_DESC">
			<option value="1">H1</option>
			<option value="2">H2</option>
			<option value="3">H3</option>
			<option value="4">H4</option>
			<option value="5">H5</option>
			<option value="6">H6</option>
		</param>

		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param
			name="show_avatar"
			type="radio"
			default="0"
			label="MOD_JCOMMENTS_LATEST_FIELD_AVATAR_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_AVATAR_DESC">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>

		<param
			name="show_smiles"
			type="list"
			default="0"
			label="MOD_JCOMMENTS_LATEST_FIELD_SMILES_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_SMILES_DESC">
			<option value="0">MOD_JCOMMENTS_LATEST_OPTION_SMILES_TEXT</option>
			<option value="1">MOD_JCOMMENTS_LATEST_OPTION_SMILES_IMAGES</option>
			<option value="2">MOD_JCOMMENTS_LATEST_OPTION_SMILES_STRIP</option>
		</param>

		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param
			name="catid" 
			type="category"
			extension="com_content"
			multiple="true"
			default=""
			size="10"
			label="MOD_JCOMMENTS_LATEST_FIELD_CATEGORY_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_CATEGORY_DESC" >
			<option value="">MOD_JCOMMENTS_LATEST_OPTION_ALL_CATEGORIES</option>
		</param>
	</params>
	<params group="advanced" addpath="/modules/mod_jcomments_latest/elements">
		<param
			name="useCSS"
			type="radio"
			default="1"
			label="MOD_JCOMMENTS_LATEST_FIELD_CSS_LABEL"
			description="MOD_JCOMMENTS_LATEST_FIELD_CSS_DESC">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>

		<param
			name="layout"
			type="modulelayout"
			module="mod_jcomments_latest"
			label="Alternative Layout"
			description="Use a different layout from the supplied module or overrides in the templates." />

		<param
			name="moduleclass_sfx"
			type="text"
			label="Module Class Suffix"
			description="PARAMMODULECLASSSUFFIX" />
		<param
			name="cache_items" 
			type="list"
			default="0"
			label="Caching"
			description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>

		<param 
			name="cache_time" 
			type="text" 
			default="900" 
			label="Cache Time" 
			description="The time before the module is recached" />
	</params>
</install>